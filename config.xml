<?xml version='1.0' encoding='utf-8'?>
<widget id="com.legroup.sardroid" version="0.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SoAR</name>
    <description>
       SoAR (Social Augmented Reality) is a mobile app for collaboration and communication in work environments. It consists of one-on-one video streaming with a bidirectional drawing layer for emphasizing details. SoAR is ideal for cooperating in situations that require an effective, visual assessment.
    </description>
    <author email="matti.jokitulppo@aalto.fi" href="http://soar.aalto.fi">
        Learning Environments Research Group
    </author>
    <content src="index.html" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
    <platform name="android">
        <icon density="mdpi" src="resources/android/icon/SoAR48.png" />
        <icon density="hdpi" src="resources/android/icon/SoAR72.png" />
        <icon density="xhdpi" src="resources/android/icon/SoAR96.png" />
        <icon density="xxhdpi" src="resources/android/icon/SoAR144.png" />
        <icon density="xxxhdpi" src="resources/android/icon/SoAR192.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="portrait" />
    <preference name="xwalkVersion" value="org.xwalk:xwalk_core_library_beta:17+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <plugin name="phonegap-plugin-push" spec="~1.7.4">
        <variable name="SENDER_ID" value="704206308880" />
    </plugin>
</widget>
